        }

            var childStopWindow

            function CreateStop() {
                if (childStopWindow) childStopWindow.close();
                CloseLeafletPopup();
                childStopWindow = window.open("/Stops/CreateAtPosition?Lat=" + newStopPosition.lat + "&Lon=" + newStopPosition.lng, 'StopChild', 'width=400,height=700');
            }





            function eventStopClick(e) {
